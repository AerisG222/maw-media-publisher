{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/src/MawMediaPublisher/bin/Debug/net10.0/MawMediaPublisher.dll",
            "args": [
                "-m",
                "/home/mmorano/maw-media-publisher",
                "-c",
                "test category's name",
                "-i"
            ],
            "cwd": "${workspaceFolder}/src/MawMediaPublisher",
            "console": "internalConsole",
            "stopAtEntry": false
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}
